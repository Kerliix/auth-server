<% layout('layouts/auth') -%>

<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
</head>
<body>
  <h1>Multi-Factor Authentication</h1>

  <% if (error) { %>
    <div style="color: red;"><%= error %></div>
  <% } %>

  <p>Please enter the <%= method.toUpperCase() %> code sent to your <%= method === 'email' ? 'email address' : method === 'sms' ? 'phone' : 'authenticator app' %>.</p>

  <form action="/auth/mfa" method="POST">
    <input type="text" name="code" placeholder="Enter code" required />
    <button type="submit">Verify</button>
  </form>
</body>
</html>
