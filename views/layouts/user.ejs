<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

  <style>
    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      display: flex;
      flex-direction: column;
    }

    header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.5rem 1rem;
      background-color: #007BFF; /* Blue */
      color: #fff;
      position: relative;
    }

    .header-left, .header-center, .header-right {
      display: flex;
      align-items: center;
    }

    .header-left {
      flex: 1;
      justify-content: flex-start;
    }

    .header-center {
      flex: 1;
      justify-content: center;
    }

    .header-right {
      flex: 1;
      justify-content: flex-end;
    }

    .menu-toggle {
      display: none;
      flex-direction: column;
      cursor: pointer;
      width: 24px;
      gap: 4px;
    }

    .menu-toggle span {
      height: 3px;
      background: #fff;
      border-radius: 2px;
      width: 100%;
    }

    .avatar {
      width: 36px;
      height: 36px;
      background-color: #ccc;
      color: #fff;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      overflow: hidden;
    }

    .avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .mobile-nav {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      background: #007BFF;
      width: 100%;
      flex-direction: column;
      border-top: 1px solid #0056b3;
      z-index: 1000;
    }

    .mobile-nav.active {
      display: flex;
    }

    .mobile-nav a {
      padding: 0.75rem 1rem;
      text-decoration: none;
      color: white;
      border-bottom: 1px solid #0056b3;
    }

    .container {
      display: flex;
      height: calc(100vh - 60px);
    }

    .sidebar {
      width: 280px;
      background-color: #007BFF;
      padding: 1rem;
      border-right: 1px solid #0056b3;
      color: white;
    }

    .sidebar ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .sidebar li {
      margin-bottom: 1rem;
    }

    .sidebar a {
      text-decoration: none;
      color: white;
      font-weight: 500;
    }

    .main-content {
      flex: 1;
      padding: 1rem;
      overflow-y: auto;
    }

    /* Responsive behavior */
    @media (max-width: 768px) {
      .sidebar {
        display: none;
      }

      .menu-toggle {
        display: flex;
      }

      .container {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <header>
    <!-- Left: Hamburger -->
    <div class="header-left">
      <div class="menu-toggle" id="menu-toggle" aria-label="Toggle menu" aria-expanded="false" role="button" tabindex="0">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <!-- Center: Title -->
    <div class="header-center">
      <h1>My App</h1>
    </div>

    <!-- Right: Avatar -->
    <div class="header-right">
      <a href="/user/profile" id="profile-link">
        <div class="avatar">
          <% if (user && user.profilePicUrl) { %>
            <img src="<%= user.profilePicUrl %>" alt="<%= user.firstName || 'User' %>" />
          <% } else if (user) {
            const initials = `${(user.firstName || '')[0] || ''}${(user.lastName || '')[0] || ''}`.toUpperCase();
          %>
            <%= initials || 'U' %>
          <% } else { %>
            U
          <% } %>
        </div>
      </a>
    </div>

    <!-- Mobile nav menu -->
    <nav class="mobile-nav" id="mobile-nav" role="navigation" aria-label="Mobile menu">
      <a href="/user/dashboard">Dashboard</a>
      <a href="/user/profile">Profile</a>
      <a href="/user/account/settings">Settings</a>
      <a href="/auth/logout">Logout</a>
    </nav>
  </header>

  <div class="container">
    <aside class="sidebar">
      <ul>
        <li><a href="/user/dashboard">Dashboard</a></li>
        <li><a href="/user/profile">Profile</a></li>
        <li><a href="/user/account/settings">Settings</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </aside>

    <main class="main-content">
      <%- body %>
    </main>
  </div>

  <script>
    // Hamburger toggle
    const menuToggle = document.getElementById('menu-toggle');
    const mobileNav = document.getElementById('mobile-nav');

    function toggleMenu() {
      const isActive = mobileNav.classList.toggle('active');
      menuToggle.setAttribute('aria-expanded', isActive);
    }

    menuToggle.addEventListener('click', toggleMenu);
    menuToggle.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggleMenu();
      }
    });

    document.addEventListener('click', (e) => {
      if (!mobileNav.contains(e.target) && !menuToggle.contains(e.target)) {
        mobileNav.classList.remove('active');
        menuToggle.setAttribute('aria-expanded', false);
      }
    });
  </script>
</body>
</html>
